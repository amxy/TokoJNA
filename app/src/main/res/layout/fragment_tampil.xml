    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewData">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backcolor"/>

    <TextView
